# Helper function
def print_bounds(name, bounds_array):
    xmin, ymin, xmax, ymax = bounds_array
    print(f"{name}:")
    print(f"  xmin = {xmin:.2f}")
    print(f"  xmax = {xmax:.2f}")
    print(f"  ymin = {ymin:.2f}")
    print(f"  ymax = {ymax:.2f}")
    print("-" * 40)

